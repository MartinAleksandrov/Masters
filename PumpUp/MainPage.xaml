<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PumpUp.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Pump Up Game!" 
                   FontSize="32" 
                   HorizontalOptions="Center" />

            <Label Text="Choose how strong you are:" 
                   FontSize="18" 
                   HorizontalOptions="Center" />

            <!-- Контейнер за бутоните -->
            <VerticalStackLayout x:Name="ButtonContainer"
                                  Spacing="10"
                                  HorizontalOptions="Center" />

            <!-- Показване на изображението -->
            <Image x:Name="StrengthImage"
                   HeightRequest="300"
                   WidthRequest="300"
                   Aspect="AspectFit"
                   IsVisible="False" />

            <!-- Текст за нивото на сила -->
            <Label x:Name="StrengthTextLabel"
                   FontSize="18"
                   HorizontalOptions="Center"
                   IsVisible="False" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
